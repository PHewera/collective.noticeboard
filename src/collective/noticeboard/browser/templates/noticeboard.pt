<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="collective.noticeboard">

  <body>
    <metal:core fill-slot="content">
      <tal:core-macro metal:define-macro="content">
        <div class="templates">
          <div id="note_template" class="hiddenStructure">
            <div class="note" style="{{css}}">
              {{#image_url}}
              {{{image_url}}}
              {{/image_url}}
              <span>{{text}}</span>
            </div>
        </div>
        <div id="noticeboardcanvas" data-href=""
          tal:attributes="data-href string:${context/absolute_url}/noticeboardnotes">
        </div>
        <script type="text/javascript">
          $(document).ready(function(){
            noticeboard.init($("#noticeboardcanvas"), $("#note_template"));
          });
        </script>
      </tal:core-macro>
    </metal:core>
  </body>
</html>
